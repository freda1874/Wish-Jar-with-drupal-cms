{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'py-6',
    'font-article'
  ]
%}
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{% if label %}
		<h2{{title_attributes}} class="  text-green-800 pb-2 text-2xl ">{{ label }}</h2>
	{% endif %}
	{{ title_suffix }}

	{% block content %}
		{{ content }}
	{% endblock %}

</div>
